<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="at.fhtw.view.ShowTourInformationView"
            prefHeight="300.0" prefWidth="600.0"
            fx:id="ImagePane">

    <children>
        <Label fx:id="informationTextField"
                AnchorPane.topAnchor="10"
               AnchorPane.bottomAnchor="100"
               AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10"
                text="Please select a Tour to see Information!" alignment="CENTER"/>
        <VBox fx:id="informationTypeField" spacing="10"
                AnchorPane.topAnchor="10"
                AnchorPane.bottomAnchor="100"
                AnchorPane.leftAnchor="10"
                AnchorPane.rightAnchor="10">
            <HBox>
                <children>
                    <HBox spacing="10">
                        <VBox>
                            <Label text="Name: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Start: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Destination: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Transport Type: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Tour Distance: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Estimated Time: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Popularity: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                            <Label text="Child-Friendliness: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                        </VBox>
                        <VBox
                              AnchorPane.leftAnchor="10.0"
                              AnchorPane.rightAnchor="10.0"
                              AnchorPane.topAnchor="10.0">
                            <Label fx:id="tourNameLabel" />
                            <Label fx:id="startLabel" />
                            <Label fx:id="destinationLabel" />
                            <Label fx:id="transportTypeLabel" />
                            <Label fx:id="distanceLabel" />
                            <Label fx:id="estimatedTimeLabel" />
                            <Label fx:id="popularityLabel" />
                            <Label fx:id="childFriendlinessLabel" />
                        </VBox>
                    </HBox>
                    <Pane HBox.hgrow="ALWAYS" />
                    <HBox fx:id="HBoxImage" alignment="TOP_RIGHT"
                          AnchorPane.leftAnchor="10.0"
                          AnchorPane.rightAnchor="10.0"
                          AnchorPane.topAnchor="10.0"
                    ></HBox>
                </children>
            </HBox>
            <HBox spacing="10">
                <VBox>
                    <Label text="Tour Description: " styleClass="bold-informationTypeFields" style="-fx-font-weight: bold"/>
                </VBox>
                <VBox>
                    <Label fx:id="tourDescriptionLabel"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>