<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="at.fhtw.view.ListToursView"
            prefHeight="300.0" prefWidth="600.0">
    <children>
        <HBox fx:id="HBoxButton" alignment="BASELINE_RIGHT" spacing="3" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.22"
                AnchorPane.bottomAnchor="10.0">
            <Button fx:id="delete" onAction="#deleteTour" text="Delete"/>
            <Button fx:id="reloadButton" onAction="#reload" text="Reload"/>
        </HBox>
    </children>
    <children>
        <VBox fx:id="dataContainer"
              AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="35.0">
        </VBox>
    </children>
</AnchorPane>